        },
        {
          "match": "data/static/**",
          "mode": "skip"
        },
        {
          "match": "data/index/**",
          "mode": "head",
          "head_lines": 100
        },
        {
          "match": "devtools/**",
          "mode": "interface"
        },
        {
          "match": "tests/**",
          "mode": "head",
          "head_lines": 220
        },
        {
          "match": "conf/**",
          "mode": "full"
        },
        {
          "match": "docs/**",
